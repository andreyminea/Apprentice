<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackgroundColor"
    android:orientation="vertical"
    tools:context=".activities.QuestDetailActivity"
    android:id="@+id/scrollviewid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextViewQuestDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:text="EASY"
            android:textColor="@color/appTextColor"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="De ce este important acest lucru?"

            android:textColor="@color/appTextColor"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/TextViewQuestDetailImportanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:layout_marginTop="4dp"
            android:textColor="@color/appTextColor"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/appTextColor"
            android:text="Ce invat cu acest curs?"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TextViewQuestDetailCeInvat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/appTextColor"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/LinearLayoutParentCurs1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="4dp"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextViewTitleCurs1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Cursul de la udemy"

                    android:textColor="@color/appTextColor"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextViewDurataCurs1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="3"
                        android:textColor="@color/appTextColor"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/TextViewCostCurs1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="3"
                        android:textColor="@color/appTextColor"
                        android:textStyle="bold"
                        android:layout_marginRight="4dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_monetization_on_black_24dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="@color/appTextColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star_yellow_24dp" />
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/childCurs1"
                layout="@layout/expandable_item_curs"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutParentCurs2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="4dp"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextViewTitleCurs2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Cursul de la udemy"
                    android:textColor="@color/appTextColor"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextViewDurataCurs2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="3"
                        android:textColor="@color/appTextColor"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/TextViewCostCurs2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="3"
                        android:textColor="@color/appTextColor"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_monetization_on_black_24dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="@color/appTextColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star_yellow_24dp" />
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/childCurs2"
                layout="@layout/expandable_item_curs"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutParentCurs3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="4dp"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextViewTitleCurs3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Cursul de la udemy"
                    android:textColor="@color/appTextColor"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TextViewDurataCurs3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="3"
                        android:textColor="@color/appTextColor"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/TextViewCostCurs3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="3"
                        android:textColor="@color/appTextColor"
                        android:textStyle="bold"
                        android:layout_marginRight="4dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_monetization_on_black_24dp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/appTextColor"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_star_yellow_24dp" />
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/childCurs3"
                layout="@layout/expandable_item_curs"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>